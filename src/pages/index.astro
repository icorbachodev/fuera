---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Concerts from '../components/Concerts.astro';
import Gallery from '../components/Gallery.astro';
---

<Layout title="Fuera | Inicio">
	<Hero />
	<Concerts />
	<hr class="section-separator">
	<Gallery />
</Layout>

<style>
	.section-separator {
		border: none;
		height: 2px;
		background-color: #333;
		margin: 40px auto;
		width: 80%;
	}
</style>